<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:columnCount="5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textField"
                android:layout_height="@dimen/activity_component_size"
                android:layout_column="0"
                android:layout_columnSpan="5"
                android:layout_gravity="fill"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@color/textViewColor" />

            <Button
                android:id="@+id/button7"
                android:layout_width="@dimen/activity_component_size"
                android:layout_height="@dimen/activity_component_size"
                android:text="7" />

            <Button
                android:id="@+id/button8"
                android:layout_width="@dimen/activity_component_size"
                android:layout_height="@dimen/activity_component_size"
                android:text="8" />

            <Button
                android:id="@+id/button9"
                android:layout_width="@dimen/activity_component_size"
                android:layout_height="@dimen/activity_component_size"
                android:text="9" />

            <Button
                android:id="@+id/button4"
                android:layout_width="@dimen/activity_component_size"
                android:layout_height="@dimen/activity_component_size"
                android:layout_column="0"
                android:text="4" />

            <Button
                android:id="@+id/button5"
                android:layout_width="@dimen/activity_component_size"
                android:layout_height="@dimen/activity_component_size"
                android:text="5" />

            <Button
                android:id="@+id/button6"
                android:layout_width="@dimen/activity_component_size"
                android:layout_height="@dimen/activity_component_size"
                android:text="6" />

            <Button
                android:id="@+id/button1"
                android:layout_width="@dimen/activity_component_size"
                android:layout_height="@dimen/activity_component_size"
                android:layout_column="0"
                android:text="1" />

            <Button
                android:id="@+id/button2"
                android:layout_width="@dimen/activity_component_size"
                android:layout_height="@dimen/activity_component_size"
                android:text="2" />

            <Button
                android:id="@+id/button3"
                android:layout_width="@dimen/activity_component_size"
                android:layout_height="@dimen/activity_component_size"
                android:text="3" />

            <Button
                android:id="@+id/button0"
                android:layout_width="@dimen/activity_component_size"
                android:layout_height="@dimen/activity_component_size"
                android:layout_column="0"
                android:text="0" />

            <Button
                android:id="@+id/operation_button_plus"
                android:layout_width="@dimen/activity_component_size"
                android:layout_height="@dimen/activity_component_size"
                android:layout_column="3"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_rowSpan="2"
                android:text="+" />

            <Button
                android:id="@+id/operation_button_minus"
                android:layout_width="@dimen/activity_component_size"
                android:layout_height="@dimen/activity_component_size"
                android:text="-" />

            <Button
                android:id="@+id/operation_button_dup"
                android:layout_width="@dimen/activity_component_size"
                android:layout_height="@dimen/activity_component_size"
                android:layout_column="4"
                android:layout_row="3"
                android:text="*" />

            <Button
                android:id="@+id/operation_button_div"
                android:layout_width="@dimen/activity_component_size"
                android:layout_height="@dimen/activity_component_size"
                android:layout_column="4"
                android:layout_row="4"
                android:text="/" />

            <Button
                android:id="@+id/operation_button_dot"
                android:layout_width="@dimen/activity_component_size"
                android:layout_height="@dimen/activity_component_size"
                android:layout_column="1"
                android:text="." />

            <Button
                android:id="@+id/operation_button_equal"
                android:layout_width="@dimen/activity_component_size"
                android:layout_height="@dimen/activity_component_size"
                android:layout_column="2"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:text="=" />

            <Button
                android:id="@+id/operation_button_change"
                android:layout_width="@dimen/activity_component_size"
                android:layout_height="@dimen/activity_component_size"
                android:layout_column="3"
                android:layout_row="1"
                android:layout_gravity="fill"
                android:text="+/-"/>


            <Button
                android:id="@+id/operation_button_del"
                android:layout_width="@dimen/activity_component_size"
                android:layout_height="@dimen/activity_component_size"
                android:layout_column="4"
                android:layout_row="1"
                android:layout_gravity="fill"
                android:text="DEL" />

        </GridLayout>

        <Button
            android:id="@+id/stepToEngineer"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/goToEngineer"/>

    </RelativeLayout>
