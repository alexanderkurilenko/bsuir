<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".EngineerActivity"
    >
    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:rowCount="4"
        android:columnCount="8"
        android:orientation="horizontal"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/textField"
            android:layout_height="@dimen/activity_component_size"
            android:layout_column="0"
            android:layout_columnSpan="7"
            android:layout_gravity="fill"
            android:background="@color/textViewColor"/>
        <Button
            android:layout_width="@dimen/activity_component_size"
            android:layout_height="@dimen/activity_component_size"
            android:layout_column="1"
            android:layout_row="2"
            android:id="@+id/button5"
            android:text="5"/>
        <Button
            android:layout_width="@dimen/activity_component_size"
            android:layout_height="@dimen/activity_component_size"
            android:id="@+id/button6"
            android:layout_column="2"
            android:layout_row="2"
            android:text="6"/>
        <Button
            android:layout_width="@dimen/activity_component_size"
            android:layout_height="@dimen/activity_component_size"
            android:id="@+id/button7"
            android:layout_column="0"
            android:layout_row="1"
            android:text="7"/>
        <Button
            android:layout_width="@dimen/activity_component_size"
            android:layout_height="@dimen/activity_component_size"
            android:id="@+id/button8"
            android:layout_column="1"
            android:layout_row="1"
            android:text="8"/>
        <Button
            android:layout_width="@dimen/activity_component_size"
            android:layout_height="@dimen/activity_component_size"
            android:id="@+id/button9"
            android:layout_column="2"
            android:layout_row="1"
            android:text="9"/>
        <Button
            android:layout_width="@dimen/activity_component_size"
            android:layout_height="@dimen/activity_component_size"
            android:id="@+id/button0"
            android:layout_column="3"
            android:layout_row="3"
            android:text="0"/>
        <Button
            android:layout_width="@dimen/activity_component_size"
            android:layout_height="@dimen/activity_component_size"
            android:id="@+id/button1"
            android:layout_column="0"
            android:layout_row="3"
            android:text="1"/>
        <Button
            android:layout_width="@dimen/activity_component_size"
            android:layout_height="@dimen/activity_component_size"
            android:id="@+id/button2"
            android:text="2"/>
        <Button
            android:layout_width="@dimen/activity_component_size"
            android:layout_height="@dimen/activity_component_size"
            android:id="@+id/button3"
            android:text="3"/>
        <Button
            android:layout_width="@dimen/activity_component_size"
            android:layout_height="@dimen/activity_component_size"
            android:id="@+id/button4"
            android:layout_column="0"
            android:layout_row="2"
            android:text="4"/>
        <Button
            android:layout_width="@dimen/activity_component_size"
            android:layout_height="@dimen/activity_component_size"
            android:layout_row="3"
            android:layout_column="4"
            android:id="@+id/operation_button_dot"
            android:text="."/>
        <Button
            android:id="@+id/operation_button_change"
            android:layout_width="@dimen/activity_component_size"
            android:layout_height="@dimen/activity_component_size"
            android:layout_column="3"
            android:layout_row="1"
            android:layout_gravity="fill"
            android:text="+/-" />
        <Button
            android:layout_width="@dimen/activity_component_size"
            android:layout_height="@dimen/activity_component_size"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_column="4"
            android:id="@+id/operation_button_del"
            android:text="DEL"/>
        <Button
            android:layout_width="@dimen/activity_component_size"
            android:layout_height="@dimen/activity_component_size"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_column="3"
            android:id="@+id/operation_button_sin"
            android:text="sin"/>
        <Button
            android:layout_width="@dimen/activity_component_size"
            android:layout_height="@dimen/activity_component_size"
            android:id="@+id/operation_button_cos"
            android:text="cos"/>
        <Button
            android:layout_width="@dimen/activity_component_size"
            android:layout_height="@dimen/activity_component_size"
            android:id="@+id/operation_button_tan"
            android:layout_column="5"
            android:layout_row="2"
            android:text="tan"/>
        <Button
            android:layout_width="@dimen/activity_component_size"
            android:layout_height="@dimen/activity_component_size"
            android:id="@+id/operation_button_pow"
            android:text="x^y"/>
        <Button
            android:layout_width="@dimen/activity_component_size"
            android:layout_height="@dimen/activity_component_size"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_column="5"
            android:layout_columnSpan="2"
            android:id="@+id/operation_button_sqrt"
            android:text="sqrt"/>
        <Button
            android:layout_width="@dimen/activity_component_size"
            android:layout_height="@dimen/activity_component_size"
            android:layout_gravity="fill"
            android:layout_row="3"
            android:layout_column="5"
            android:id="@+id/operation_button_equal"
            android:text="="/>
    </GridLayout>

    <Button
        android:id="@+id/stepToNormal"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/goToNormal"/>

</RelativeLayout>
